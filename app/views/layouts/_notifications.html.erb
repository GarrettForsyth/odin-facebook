<li class="dropdown">
  <a href="#" class=="dropdown-toggle" data-toggle="dropdown">
    New Notifications! <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <% current_user.get_new_notifications.limit(5).each do |n| %>
      <li>
        <div class="notification_dropdown">
          <%= render n %>
          <span class="notification_dropdown_x">
            <%= link_to "x", notification_path(n), method: :delete %>
          </span>
        </div>
      </li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to "See All My Notifications", notifications_path %></li>
  </ul>
</li>
