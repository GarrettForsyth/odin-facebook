<% title "Notifications for #{current_user.name}" %>

<h2>Notifications:</h2>

<%= will_paginate %>

<% @notifications.each do |n| %>
  <li>
    <%= gravatar_for n.notified_by, size: 30 %>
    <%= render n %>
    (<%= n.created_at.in_time_zone('EST').strftime("%I:%M") %>)
    ~><%= link_to "Dismiss", notification_path(n), method: :delete %>
  </li>
<% end %>

<%= will_paginate %>
